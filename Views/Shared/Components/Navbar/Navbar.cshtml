@{
}
<div class="">

    <nav class="navbar navbar-expand-lg navbar-dark px-5 py-3 py-lg-0">
        <a href="/" class="navbar-brand p-0">
            <h1 class="m-0"><i class="fa fa-user-tie me-2"></i>Startup</h1>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="fa fa-bars"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto py-0">
                @foreach (var menu in Model.Where(menu => menu.Levels == 1).OrderBy(menu =>
                menu.MenuOrder).ToList())
                {
                    var ParentID = menu.MenuID;
                    var SubMenu = Model.Where(menu => menu.ParentID == ParentID).OrderBy(menu =>
                    menu.MenuOrder).ToList(); ;
                    @if (SubMenu.Count == 0)
                    {
                        <a href="#" class="nav-item nav-link">@menu.MenuName</a>
                    }
                    else
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">@menu.MenuName</a>
                            <div class="dropdown-menu m-0">
                                @foreach (var submenu in SubMenu)
                                {
                                    <a href="#" class="dropdown-item">@submenu.MenuName</a>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
            <butaton type="button" class="btn text-primary ms-3" data-bs-toggle="modal" data-bs-target="#searchModal"><i
                    class="fa fa-search"></i></butaton>
            <a href="https://htmlcodex.com/startup-company-website-template"
                class="btn btn-primary py-2 px-4 ms-3">Download
                Pro Version</a>
        </div>
    </nav>
</div>
